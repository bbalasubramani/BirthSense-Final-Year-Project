{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/index.js"
    },
    {
      "source": "/static/(.*)",
      "destination": "frontend/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/$1"
    }
  ]
}
